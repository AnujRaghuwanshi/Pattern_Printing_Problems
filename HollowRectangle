//C++ Implementation
#include <iostream>
using namespace std;

int main() {
    int row = 4;
    int col = 5;

    for (int i = 1; i <= row; i++) {
        for (int j = 1; j <= col; j++) {
            if (i == 1 || j == 1 || i == row || j == col) {
                cout << "* ";
            } else {
                cout << "  ";
            }
        }
        cout << endl;
    }

    return 0;
}


//Java Implementation
package Pattern;

public class HollowRectangle {
    public static void main(String[] args) {
        int row = 4;
        int col = 5;
        for(int i=1; i<=row; i++){
            for(int j=1; j<=col; j++){
                if(i == 1 || j == 1 || i == row || j == col){
                    System.out.print("* ");
                }
                else{
                    System.out.print("  ");
                }
            }
            System.out.println();
        }
    }
    
}
